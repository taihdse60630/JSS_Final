                            <div class="text-right">
                                <button type="button" onclick="beforeSubmit()" class="btn btn-success">@ViewBag.ButtonName</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>

