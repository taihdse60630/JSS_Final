                                        <div class="col-md-6">
                                            <div class="form-group">
                                                
                                                <label for="inputPosition" class="col-md-5 control-label">Họ tên <span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    @Html.TextBoxFor(s => s.referencePersonForm.ReferencePersonName, new { @class = "form-control", Value = Model.referencePerson.ReferencePersonName, Name = "ReferencePersonName" })
                                                    @Html.ValidationMessageFor(s => s.referencePersonForm.ReferencePersonName, "", new { @class = "ErrorMessage", data_valmsg_for = "ReferencePersonName" })
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <label for="inputPosition" class="col-md-5 control-label">Chức danh <span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    @Html.TextBoxFor(s => s.referencePersonForm.ReferencePersonPosition, new { @class = "form-control", Value = Model.referencePerson.ReferencePersonPosition, Name = "ReferencePersonPosition" })
                                                    @Html.ValidationMessageFor(s => s.referencePersonForm.ReferencePersonPosition, "", new { @class = "ErrorMessage", data_valmsg_for = "ReferencePersonPosition" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <label for="inputPosition" class="col-md-5 control-label">Công ty <span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    @Html.TextBoxFor(s => s.referencePersonForm.ReferencePersonCompany, new { @class = "form-control", Value = Model.referencePerson.ReferencePersonCompany, Name = "ReferencePersonCompany", style = "width:300%" })
                                                    @Html.ValidationMessageFor(s => s.referencePersonForm.ReferencePersonCompany, "", new { @class = "ErrorMessage", data_valmsg_for = "ReferencePersonCompany" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <label for="inputPosition" class="col-md-5 control-label">Email <span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    <input type="text" data-val="true" data-val-email="Email không đúng định dạng." data-val-length="Độ dài Email không được vượt quá 100." data-val-length-max="100" data-val-required="Email không được trống." placeholder="vd: abc@gmail.com" name="EmailAddress" class="form-control" value="@Model.referencePerson.EmailAddress">
                                                    <span class="field-validation-valid ErrorMessage" data-valmsg-for="EmailAddress" data-valmsg-replace="true"></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputPhone" class="col-md-5 control-label">Điện thoại</label>

                                                <div class="col-md-7">
                                                    @Html.TextBoxFor(s => s.referencePersonForm.ReferencePersonPhoneNumber, new { @class = "form-control", Value = Model.referencePerson.ReferencePersonPhoneNumber, id = "inputPhone", Name = "ReferencePersonPhoneNumber" })
                                                    @Html.ValidationMessageFor(s => s.referencePersonForm.ReferencePersonPhoneNumber, "", new { @class = "ErrorMessage", data_valmsg_for = "ReferencePersonPhoneNumber" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
