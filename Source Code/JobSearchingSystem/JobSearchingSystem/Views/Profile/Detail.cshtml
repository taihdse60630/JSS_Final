                                            <div class="col-md-7">
                                                <label class="control-label">@Model.educationHistory.Achievement</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    }
    
