                                                        if (@Model.schoolLevels.ElementAt(count).SchoolLevel_ID == @Model.educationHistory.SchoolLevel_ID)
                                                        {
                                                            <label class="control-label">@Model.schoolLevels.ElementAt(count).Name</label>
