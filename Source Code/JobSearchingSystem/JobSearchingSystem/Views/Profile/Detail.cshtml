                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-3">

                                            </div>
                                            <div class="col-md-6">

                                                <a href="javascript:void(do_something())" onclick="AddLanguage();" class="btn btn-success">
                                                    Thêm mới
                                                    &nbsp;<i class="fa fa-plus"></i>
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Công ty gần đây nhất</label>

                                            <div class="col-md-7">
                                                <label class="control-label">@Model.profile.MostRecentCompany</label>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Vị trí gần đây nhất</label>

                                            <div class="col-md-7">
                                                <label class="control-label">@Model.profile.MostRecentPosition</label>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Cấp bậc hiện tại</label>

                                            <div class="col-md-7">
                                                @if (Model.jobLevels != null)
                                                {
                                                    for (int count = 0; count < Model.jobLevels.Count(); count++)
                                                    {
                                                        if (@Model.jobLevels.ElementAt(count).JobLevel_ID == @Model.profile.CurrentJobLevel_ID)
                                                        {
                                                            <label class="control-label">@Model.jobLevels.ElementAt(count).Name</label>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Vị trí mong muốn<span class="require">*</span></label>

                                            <div class="col-md-7">
                                                <label class="control-label">@Model.profile.ExpectedPosition</label>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Cấp bậc mong muốn<span class="require">*</span></label>

                                            <div class="col-md-7">
                                                @if (Model.jobLevels != null)
                                                {
                                                    for (int count = 0; count < Model.jobLevels.Count(); count++)
                                                    {
                                                        if (@Model.jobLevels.ElementAt(count).JobLevel_ID == @Model.profile.ExpectedJobLevel_ID)
                                                        {
                                                            <label class="control-label">@Model.jobLevels.ElementAt(count).Name</label>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Nơi làm việc<span class="require">*</span></label>

                                            <div class="col-md-7">
                                                @if (Model.cities != null)
                                                {
                                                    for (int count = 0; count < Model.cities.Count(); count++)
                                                    {
                                                        if (@Model.cities.ElementAt(count).CityID == @Model.expectedCity)
                                                        {
                                                            <label class="control-label">@Model.cities.ElementAt(count).Name</label>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Nghành nghề<span class="require">*</span></label>

                                            <div class="col-md-7">
                                                @if (Model.categories != null)
                                                {
                                                    for (int count = 0; count < Model.categories.Count(); count++)
                                                    {
                                                        if (@Model.categories.ElementAt(count).CategoryID == @Model.categoryID)
                                                        {
                                                            <label class="control-label">@Model.categories.ElementAt(count).Name</label>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            <label for="selLastCompany" class="col-md-5 control-label">Mức lương mong muốn<span class="require">*</span></label>

                                            @if (@Model.profile.ExpectedSalary == 0)
                                            {
                                                <div class="col-md-7">
                                                    <label class="control-label">Thương lượng</label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-md-7">
                                                    <label class="control-label">@Model.profile.ExpectedSalary</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="col-md-12"></div>
                                            <label for="inputObjective" class="control-label" style="margin-left: 15px">Giới Thiệu Bản Thân Và Miêu Tả Mục Tiêu Nghề Nghiệp Của Bạn <span class="require">*</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div>
                                            <label class="control-label">@Model.profile.Objectives</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <!--Kinh nghiệm làm việc div-->
