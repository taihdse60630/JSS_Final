                                                    {
                                                        for (int count = 0; count < Model.languages.Count(); count++)
                                                        {
                                                            if (@Model.languages.ElementAt(count).LanguageID == @Model.profile.LanguageID)
                                                            {
                                                                <label class="control-label">@Model.languages.ElementAt(count).Name</label>
                                                            }
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="selCountry" class="col-md-5 control-label">Trình độ <span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    @if (Model.levels != null)
                                                    {
                                                        for (int count = 0; count < Model.levels.Count(); count++)
                                                        {
                                                            if (@Model.levels.ElementAt(count).Level_ID == @Model.profile.Level_ID)
                                                            {
                                                                <label class="control-label">@Model.levels.ElementAt(count).Name</label>
                                                            }
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
