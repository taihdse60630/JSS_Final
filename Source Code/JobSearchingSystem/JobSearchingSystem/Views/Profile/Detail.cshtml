<div class="page-content" style="padding: 20px 100px 20px 100px; background-color: #dedede; ">

    <br />

    <!--Thông tin cá nhân div-->
    @if (Model.contact != null && Model.contact.IsVisible == true)
    {
        <div class="col-lg-12 panel panel-default">
            <br />

            <div id="tab-two-columns-horizontal" class="tab-pane fade active in">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-grey">
                            <div class="panel-heading">Thông tin cá nhân</div>
                            <div class="panel-body pan form-horizontal">
                                <div class="form-body pal">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputName" class="col-md-6 control-label">Họ và tên<span class="require">*</span></label>
                                                <div class="col-md-6">
                                                    <label class="control-label">@Model.contact.FullName</label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Giới tính<span class="require">*</span></label>
                                                <div class="col-md-7">
                                                    @if (@Model.contact.Gender == true)
                                                    {
                                                        <label class="control-label">Nam</label>
                                                    }
                                                    else
                                                    {
                                                        <label class="control-label">Nữ</label>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputFirstName" class="col-md-6 control-label">Tình trạng hôn nhân<span class="require">*</span></label>

                                                <div class="col-md-6">
                                                    @if (@Model.contact.MaritalStatus == true)
                                                    {
                                                        <label class="control-label">Đã kết hôn</label>
                                                    }
                                                    else
                                                    {
                                                        <label class="control-label">Độc thân</label>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputLastName" class="col-md-5 control-label">Quốc gia<span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    @if (@Model.contact.Nationality == true)
                                                    {
                                                        <label class="control-label">Người Việt Nam</label>
                                                    }
                                                    else
                                                    {
                                                        <label class="control-label">Người nước ngoài</label>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputAddress" class="col-md-6 control-label">Địa chỉ</label>
                                                <div class="col-md-6">
                                                    <label class="control-label">@Model.contact.Address</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputPhone" class="col-md-5 control-label">Điện thoại<span class="require">*</span></label>

                                                <div class="col-md-7">
                                                    <label class="control-label">@Model.contact.PhoneNumber</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputBirthday" class="col-md-6 control-label">Ngày sinh<span class="require">*</span></label>

                                                <div class="col-md-6">
                                                    <label class="control-label">@Model.contact.DateofBirth.ToString("dd/MM/yyyy")</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputAddress" class="col-md-5 control-label">Quận/Huyện</label>
                                                <div class="col-md-7">
                                                    <label class="control-label">@Model.contact.District</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputLastName" class="col-md-6 control-label">Tỉnh/Thành Phố<span class="require">*</span></label>

                                                <div class="col-md-6">
                                                    @if (Model.cities != null)
                                                    {
                                                        for (int count = 0; count < Model.cities.Count(); count++)
                                                        {
                                                            if (@Model.cities.ElementAt(count).CityID == Model.contact.CityID)
                                                            {
                                                                <label class="control-label">@Model.cities.ElementAt(count).Name</label>
                                                            }
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <br />
    }
   
    <!--Thông tin chung div-->
